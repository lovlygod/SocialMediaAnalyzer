<Window x:Class="SocialMediaAnalyzerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SocialMediaAnalyzerWPF.Converters"
        xmlns:usercontrols="clr-namespace:SocialMediaAnalyzerWPF.UserControls"
        mc:Ignorable="d"
        Title="{DynamicResource WindowTitle}"
        Icon="assets/logo.png"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Loaded="Window_Loaded">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <Style x:Key="AnimatedTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}">
            <EventSetter Event="Loaded" Handler="TextBox_Loaded" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{DynamicResource PrimaryHueMidBrush}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="BackButton"
                        Grid.Column="0"
                        Content="{DynamicResource BackButton}"
                        Style="{StaticResource RoundedButtonStyle}"
                        Background="{DynamicResource PrimaryHueDarkBrush}"
                        Foreground="White"
                        FontSize="12"
                        FontWeight="Medium"
                        Margin="0,0,10,0"
                        Click="BackButton_Click"
                        Visibility="Collapsed"/>
                        
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Image Source="assets/logo.png"
                           Width="30"
                           Height="30"
                           VerticalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock x:Name="MainTitle"
                               Text="{DynamicResource AppName}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="15,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button x:Name="LanguageSwitchButton"
                            Content="{Binding LanguageButtonText}"
                            Style="{StaticResource RoundedButtonStyle}"
                            Background="{DynamicResource PrimaryHueDarkBrush}"
                            Foreground="White"
                            FontSize="12"
                            FontWeight="Medium"
                            Margin="0,0,10,0"
                            Click="LanguageSwitchButton_Click"/>
                    <Button x:Name="ThemeSwitchButton"
                            Style="{StaticResource RoundedButtonStyle}"
                            Background="{DynamicResource PrimaryHueDarkBrush}"
                            Foreground="White"
                            FontSize="12"
                            FontWeight="Medium"
                            Margin="0,0,0,0"
                            Click="ThemeSwitchButton_Click">
                        <Button.Content>
                            <materialDesign:PackIcon x:Name="ThemeIcon"
                                                     Kind="{Binding ThemeIconKind}"
                                                     Width="16"
                                                     Height="16"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1"
                      Margin="20"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource HiddenScrollViewerStyle}">
            <StackPanel x:Name="MainContentPanel">
                <Grid x:Name="WelcomeScreen" Visibility="Visible">
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center" 
                                Margin="0,50">
                        <Image Source="assets/logo1.png"
                               Width="120"
                               Height="120"
                               HorizontalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Margin="0,0,0,20"/>
                        <TextBlock Text="{DynamicResource WelcomeTitle}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="{DynamicResource WelcomeSubtitle}"
                                   FontSize="18"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,30"/>
                        <TextBlock Text="{DynamicResource DeveloperLabel}"
                                   FontSize="14"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
                        <TextBlock x:Name="GitHubLink"
                                   Text="GitHub: @lovlygod"
                                   FontSize="14"
                                   Foreground="{DynamicResource SecondaryAccentBrush}"
                                   HorizontalAlignment="Center"
                                   Cursor="Hand"
                                   MouseDown="GitHubLink_MouseDown">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextDecorations" Value="None"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center"
                                    Margin="0,40,0,0">
                            <Button x:Name="UsernameSearchButton"
                                    Content="{DynamicResource UsernameSearchButton}"
                                    Style="{StaticResource RoundedButtonStyle}"
                                    Background="{DynamicResource SecondaryAccentBrush}"
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Margin="0,0,0,10"
                                    Width="200"
                                    Height="40"
                                    Click="UsernameSearchButton_Click"/>
                            <Button x:Name="PhoneSearchButton"
                                    Content="{DynamicResource PhoneSearchButton}"
                                    Style="{StaticResource RoundedButtonStyle}"
                                    Background="{DynamicResource SecondaryAccentBrush}"
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Margin="0,0,0,10"
                                    Width="200"
                                    Height="40"
                                    Click="PhoneSearchButton_Click"/>
                            <Button x:Name="EmailSearchButton"
                                    Content="{DynamicResource EmailSearchButton}"
                                    Style="{StaticResource RoundedButtonStyle}"
                                    Background="{DynamicResource PrimaryHueDarkBrush}"
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Margin="0,0,0,0"
                                    Width="200"
                                    Height="40"
                                    Click="EmailSearchButton_Click"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <materialDesign:PackIcon Kind="AlertCircle"
                                                         Width="20"
                                                         Height="20"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,5,0"
                                                         Foreground="Red"/>
                                <TextBlock Text="{DynamicResource ScrollHintText}"
                                           FontSize="12"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                           VerticalAlignment="Center"
                                           FontStyle="Italic"/>
                            </StackPanel>
                            <Image Source="/assets/scroll.png"
                                   Width="330"
                                   Height="212"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </StackPanel>
                        
                        <TextBlock Text="{DynamicResource ComingSoonLabel}"
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </Grid>
                
                <usercontrols:UsernameSearchControl x:Name="UsernameSearchControl" Visibility="Collapsed"/>
                
                <usercontrols:PhoneSearchControl x:Name="PhoneSearchControl" Visibility="Collapsed"/>
                
                <usercontrols:EmailSearchControl x:Name="EmailSearchControl" Visibility="Collapsed" BackButtonClicked="EmailSearchControl_BackButtonClicked"/>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2"
                Background="{DynamicResource MaterialDesignToolBarBackground}"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="{DynamicResource AppVersion}"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </Grid>
        </Border>
    </Grid>
</Window>